#include "util.h"

void putSIO(char c) {                       // SIO への出力
  while((in(0x0a) & 0x80)==0)
    ;
  out(0x08, ord(c));
}

// 1文字表示ルーチン
public void putch(char c) {                 // SIO へ出力する
  if (c=='\n') putSIO('\r');
  putSIO(c);
}

// 文字列出力
public void putstr(char[] str) {
  for (int i=0; str[i]!='\0'; i=i+1)
    putch(str[i]);
}

// とりあえず８人の王妃問題 (^^;;;
int[] x=array(8);
boolean[] a=array(8);
boolean[] b=array(15);
boolean[] c=array(15);

void print(){
  putstr("\nSolution\n");
  for (int i=0; i<8; i=i+1){
    for (int j=0; j<8; j=j+1)
      if (j==x[i]) putstr(" Q");
      else putstr(" .");
    putstr("\n");
  }
}

void try(int i){
  for (int j=0; j<8; j=j+1) {
    if (!a[j] && !b[i-j+7] && !c[i+j]) {
      a[j]=b[i-j+7]=c[i+j]=true;
      x[i]=j;
      if (i<7) try(i+1);
      else print();
      a[j]=b[i-j+7]=c[i+j]=false;
    }
  }
}

public void main() {
  try(0);
  while(true);      // カーネルは止まれない
}

