#include "util.h"

void putSIO(char c) {                       // SIO への出力
  while((in(0x05) & 0x80)==0)
    ;
  out(0x04, ord(c));
}

// 1文字表示ルーチン
public void putch(char c) {                 // VGA と SIO の両方へ出力する
  if (c=='\n') putSIO('\r');
  putSIO(c);
}

// 文字列出力
public void putstr(char[] str) {
  for (int i=0; str[i]!='\0'; i=i+1)
    putch(str[i]);
}

// 16進数出力
char[] hstr = "0123456789abcdef";
public void puthex(int x) {
  putch(hstr[(x>>12)&0x000f]);
  putch(hstr[(x>>8 )&0x000f]);
  putch(hstr[(x>>4 )&0x000f]);
  putch(hstr[(x    )&0x000f]);
}
 
// エラー終了
void error() {
  putstr("error!\n");                    // エラー
  halt();
}

void wait(int n) {
  for (int i=0; i<n; i=i+1)
   wait1m();
}

// ここからスタート
int ch0, ch1, ch2, ch3, digital;

void adc() {
  for (int v=0; v<256; v=v+1) {
    out(0x000d, v);
    wait(10);
    int x = in(0x000c);
    if ((x & 8)!=0) ch0 = v;
    if ((x & 4)!=0) ch1 = v;
    if ((x & 2)!=0) ch2 = v;
    if ((x & 1)!=0) ch3 = v;
  }
  int d = 0;
  if (ch0>127) d = d | 8;
  if (ch1>127) d = d | 4;
  if (ch2>127) d = d | 2;
  if (ch3>127) d = d | 1;
  d = d | (in(0x000c) & 0x00f0);
  digital = d;
}

public void main() {
  putstr("ADC test start\n");
  for(;;) {
    adc();
    puthex(digital);
    putstr(" : ch0=");
    puthex(ch0);
    putstr(", ch1=");
    puthex(ch1);
    putstr(", ch2=");
    puthex(ch2);
    putstr(", ch3=");
    puthex(ch3);
    putch('\n');
  }
}
